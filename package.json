{
    "name": "vibrations",
    "version": "1.0.0",
    "description": "A minimal soundmap",
    "repository": {
        "type": "git",
        "url": "https://github.com/schwartzman/vibrations"
    },
    "author": "Anthony Schwartzman",
    "license": "MIT",
    "dependencies": {
        "jquery": "^3.3.1",
        "page": "^1.8.6",
        "store": "^2.0.12"
    },
    "devDependencies": {
        "autoprefixer": "^8.6.3",
        "babel-core": "^6.26.3",
        "babel-preset-env": "^1.7.0",
        "babelify": "^8.0.0",
        "browserify": "^16.2.2",
        "node-sass": "^4.9.0",
        "normalize.css": "^8.0.0",
        "postcss-clean": "^1.1.0",
        "postcss-cli": "^5.0.1",
        "scut": "^1.4.0",
        "uglify-js": "^3.4.1"
    },
    "scripts": {
        "serve": "python reload.py",
        "watch:scss": "watch 'npm run build:scss' static/scss",
        "watch:script": "watch 'npm run build:script' static/js",
        "watch": "parallelshell 'npm run watch:scss' 'npm run watch:script'",
        "build:css": "postcss node_modules/normalize.css/normalize.css --use postcss-clean --no-map --dir static/dist",
        "build:scss": "node-sass --output-style compressed --output static/dist static/scss/main.scss",
        "postbuild:scss": "postcss --use autoprefixer --no-map --replace static/dist/main.css",
        "build:script": "browserify static/js/main.js --transform [babelify --presets env] --outfile static/dist/main.js",
        "postbuild:bundle": "uglifyjs static/dist/main.js --compress --mangle --output static/dist/main.js",
        "build": "npm run build:css && npm run build:scss && npm run build:script",
        "deploy:lambda": "zappa update production",
        "deploy:s3": "aws s3 sync static s3://vibrations.earth-static/static --exclude scss/* --exclude js/*",
        "deploy": "npm run deploy:lambda && npm run deploy:s3",
        "ship": "npm run build && npm run deploy"
    }
}
